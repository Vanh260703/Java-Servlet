<script type="text/javascript">
	function my_submit(){
		var exampleEmail = document.getElementById("exampleInputEmail1");
		var examplePassword = document.getElementById("exampleInputPassword1");
		var myForm = document.getElementById("myForm");
		var email = exampleEmail.value;
		var password = examplePassword.value;
		
		if(email.length == 0 || password.length == 0){
			if(email.length == 0){
				alert("Bạn chưa nhập email");
				return false;
			}
			if(password.length == 0){
				alert("Bạn chưa nhập mật khẩu");
				return false;
			}
		}else{
			myForm.submit();
		}
		
		
		
	}
</script>
