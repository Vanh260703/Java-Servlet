	<div id = "hideDiv">
		ẨN
	</div>
	<script type="text/javascript">
		function showDiv(){
			const showDiv = document.getElementById("showDiv");
			showDiv.display = "block";
		}
		
		function hideDiv(){
			const showDiv = document.getElementById("hideDiv");
			hideDiv.display = "none";
		}
	</script>
