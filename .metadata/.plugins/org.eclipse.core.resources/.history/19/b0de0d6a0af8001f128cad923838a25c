	<script type="text/javascript">
		vảr check = "hidden"
		function hideDiv(){
			const myDiv = document.getElementById("myDiv");
			if(check == "hidden"){
				myDiv.style.display = "none";
				check = "show";
			}else{
				myDiv.style.display = "block";
				check = "hidden";
			}
			}
	</script>
